    <script>
        $(document).ready(function () {
            $('.modal').on('shown.bs.modal', function () {
                var modalId = $(this).attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = $('#ratingValue_' + ratingId).val();
                $('#ratingStars_' + ratingId + ' span').each(function () {
                    if ($(this).data('rating-value') <= ratingValue) {
                        $(this).addClass('checked');
                    } else {
                        $(this).removeClass('checked');
                    }
                });
            });

            $('#ratingStars span').click(function () {
                var ratingValue = $(this).data('rating-value');
                updateCreateRating(ratingValue);
                $('#ratingValue').val(ratingValue);
            });

            $('.modal form').submit(function (event) {
                event.preventDefault(); // Prevent form submission

                var modalId = $(this).closest('.modal').attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = $('#ratingValue_' + ratingId).val();

                // Get the comment value
                var comment = $('#comment_' + ratingId).val();

                // Submit the form
                $(this).off('submit').submit();
            });
        });

        function updateCreateRating(rating) {
            var createRatingStars = $('#ratingStars span');
            createRatingStars.each(function () {
                if ($(this).data('rating-value') <= rating) {
                    $(this).addClass('checked');
                } else {
                    $(this).removeClass('checked');
                }
            });
        }
    </script>
    
