@model IEnumerable<Client.ViewModels.TaskReportEmployeeRatingVM>

@{
    ViewData["Title"] = "IndexManager";
    Layout = null;
    var fullname = User.Identity.Name;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Status - Manager</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/assets/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="~/assets/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/assets/vendor/remixicon/fonts/remixicon.css">

    <style>
        .rating-stars {
            color: rgb(219, 219, 219);
        }

            .rating-stars .fa-star {
                font-size: 20px;
            }

                .rating-stars .fa-star.checked {
                    color: gold;
                }

        .custom-textbox {
            width: 100%;
            height: 100px;
            resize: vertical;
        }
    </style>

</head>
<body class="  ">
    <!-- Wrapper Start -->
    <div class="wrapper">

        <div class="iq-sidebar  sidebar-default ">
            <div class="iq-sidebar-logo d-flex align-items-center">
                <a asp-controller="Employee" asp-action="Manager" class="header-logo">
                    <img src="~/assets/images/logo.svg" alt="logo">
                    <h3 class="logo-title light-logo">Manager</h3>
                </a>
                <div class="iq-menu-bt-sidebar ml-0">
                    <i class="las la-bars wrapper-menu"></i>
                </div>
            </div>
            <div class="data-scrollbar" data-scroll="1">
                <nav class="iq-sidebar-menu">
                    <ul id="iq-sidebar-toggle" class="iq-menu">
                        <li class="">
                            <a asp-controller="Employee" asp-action="Manager" class="svg-icon">
                                <svg class="svg-icon" width="25" height="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                                <span class="ml-4">Dashboard</span>
                            </a>
                        </li>
                        <li class="">
                            <a asp-controller="Task" asp-action="Index" class="svg-icon">
                                <svg class="svg-icon" width="25" height="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                                    <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                                </svg>
                                <span class="ml-4">Task</span>
                            </a>
                        </li>
                        <li class="active">
                            <a asp-controller="Report" asp-action="IndexManager" class="svg-icon">
                                <svg class="svg-icon" width="25" height="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                                </svg>
                                <span class="ml-4">Status</span>
                            </a>
                        </li>

                    </ul>
                </nav>

                <div class="pt-5 pb-2"></div>
            </div>
        </div>
        <div class="iq-top-navbar">
            <div class="iq-navbar-custom">
                <nav class="navbar navbar-expand-lg navbar-light p-0">

                    <div class="navbar-breadcrumb">
                        <h5>Status</h5>
                    </div>
                    <div class="d-flex align-items-center">
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-label="Toggle navigation">
                            <i class="ri-menu-3-line"></i>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto navbar-list align-items-center">

                                <li class="nav-item nav-icon dropdown caption-content">
                                    <a href="#" class="search-toggle dropdown-toggle  d-flex align-items-center" id="dropdownMenuButton4"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="~/assets/images/user/1.jpg" class="img-fluid rounded-circle" alt="user">
                                        <div class="caption ml-3">
                                            <h6 class="mb-0 line-height">@fullname<i class="las la-angle-down ml-2"></i></h6>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right border-none" aria-labelledby="dropdownMenuButton">

                                        <li class="dropdown-item  d-flex svg-icon ">
                                            <svg class="svg-icon mr-0 text-primary" id="h-05-p" width="20" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                            </svg>
                                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="content-page">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                                    <h5>Status Report</h5>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="list" class="item-content animate__animated animate__fadeIn active" data-toggle-extra="tab-content">
                    <div class="table-responsive rounded bg-white mb-4">
                        <table class="table mb-0 table-borderless tbl-server-info tble-min-width">
                            <thead>
                                <tr>
                                    <th scope="col" style="padding: 20px;">Employee</th>
                                    <th scope="col" style="padding: 20px;">Subject Task</th>
                                    <th scope="col" style="padding: 20px;">Deadline</th>
                                    <th scope="col" style="padding: 20px;">Status</th>
                                    <th scope="col" style="padding: 20px;">Rating</th>
                                    <th scope="col" style="padding: 20px;">Detail Report</th>
                                </tr>
                            </thead>
                            @foreach(var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.Employee.Fullname</td>
                                        <td>
                                            @item.Subject
                                        </td>
                                        <td>
                                            @if (DateTime.Now > item.Deadline)
                                            {
                                                <p class="mb-0 text-red"><i class="las la-calendar-check mr-2"></i>@item.Deadline</p>
                                            }
                                            else
                                            {
                                                <p class="mb-0"><i class="las la-calendar-check mr-2"></i>@item.Deadline</p>
                                            }
                                        </td>
                                        <td>
                                            @if(item.Deadline > DateTime.Now && item.Report == null)
                                            {
                                                <span class="mt-2 badge badge-pill border border-secondary text-secondary">On Progress</span>
                                            } else if(item.Deadline < DateTime.Now && item.Report == null)
                                            {
                                                <span class="mt-2 badge badge-pill border border-danger text-danger">Overdue</span>
                                            } else if(item.Report != null)
                                            {
                                                <span class="mt-2 badge badge-pill border border-success text-success">Uploaded</span>
                                            }
                                        </td>
                                        <td>
                                        @if(item.Rating != null)
                                        {
                                            
                                                <div class="rating-stars" id="ratingStars_@item.Rating?.Guid" value="@item.Rating?.RatingValue">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= item.Rating?.RatingValue)
                                                        {
                                                            <span class="fa fa-star checked" onclick="updateRating('@item.Rating?.Guid', @i)"></span>
                                                        }
                                                        else
                                                        {
                                                            <span class="fa fa-star" onclick="updateRating('@item.Rating?.Guid', @i)"></span>
                                                        }
                                                    }
                                                </div>
                                                @*<button class="btn bg-info-light" disabled>Rating</button>*@
                                            
                                        } else if(item.Report == null)
                                        {
                                                @*<a data-toggle="modal" data-target="#ratingModal" class="btn bg-info-light" id="RatingTriggerModal" data-id="@item.Report?.Guid">Rating</a>*@
                                                <button class="btn btn-danger" disabled>Report belum di upload</button>
                                            }
                                            else if (item.Rating == null && item.Report != null)
                                            {
                                                <a class="btn bg-info-light" href="@Url.Action("Creates", "Rating", new {item.Report?.Guid})">Berikan Rating</a>

                                            }
                                        </td>
                                        <td>
                                            @if(item.Report == null)
                                            {
                                                
                                            <div class="media align-items-center mt-md-0 mt-3">
                                                <a class="btn btn-warning" role="button" disabled>Detail Report</a>
                                                </div>
                                            } else
                                            {
                                                <div class="media align-items-center mt-md-0 mt-3">
                                                    <a class="btn bg-success-light" data-toggle="modal" data-target="#modal-report-@item.Report.Guid" role="button">Detail Report</a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            }
                            
                        </table>

                    </div>
                </div>
                <!-- Page end  -->
            </div>
        </div>
    </div>
    <!-- Wrapper End-->
    @foreach(var item in Model)
    {
        @if(item.Report != null)
        {
            <div class="modal fade bd-example-modal-lg" role="dialog" aria-modal="true" id="modal-report-@item.Report.Guid">
                <div class="modal-dialog  modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header d-block text-center pb-3 border-bttom">
                            <h3 class="modal-title" id="exampleModalCenterTitle">Detail Report</h3>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText02" class="h5">Subject Report</label>
                                        <input class="form-control" id="exampleInputText02" readonly value="@item.Report.Subject">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText040" class="h5">Description</label>
                                        <textarea class="form-control" id="exampleInputText040" readonly rows="2">@item.Report.Description</textarea>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText05" class="h5">Attachment</label>
                                        <input class="form-control" id="exampleInputText05" readonly value="@item.Report.FileName">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="d-flex flex-wrap align-items-ceter justify-content-center mt-2">
                                        @*<a class ="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title=""
                                                data-original-title="Download" href="@Url.Action("DownloadFile", "Report", new { item.Guid /* id=item.PrimaryKey */ })">
                                            Download File
                                        </a>*@
                                        <form asp-action="DownloadFile">
                                            <input type="hidden" name="reportId" value="@item.Report.Guid" class="btn btn-danger" />
                                            <input type="submit" value="Download" class="btn btn-primary" />
                                            <div class="btn btn-light" data-dismiss="modal">Cancel</div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    }

    <!-- Modal list start -->
    <!-- Rating Modal -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        function updateRating(guid, rating) {
            var ratingStars = $('#ratingStars_' + guid + ' span');
            ratingStars.each(function (index) {
                if (index < rating) {
                    $(this).addClass('checked');
                } else {
                    $(this).removeClass('checked');
                }
            });

            // Mengatur nilai rating pada atribut data-rating-value
            $('#ratingStars_' + guid).data('rating-value', rating);
        }
    </script>


    <!-- Backend Bundle JavaScript -->
    <script src="~/assets/js/backend-bundle.min.js"></script>


    <!-- Chart Custom JavaScript -->
    <script async src="~/assets/js/chart-custom.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


</body>
</html>

