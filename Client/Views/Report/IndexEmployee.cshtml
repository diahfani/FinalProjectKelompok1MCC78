    <script>
        let selectedRating = 0;

        function rate(rating) {
            selectedRating = rating;

            // Reset all stars to default state
            const stars = document.getElementsByClassName('star');
            for (let i = 0; i < stars.length; i++) {
                stars[i].innerHTML = '&#9734;';
                stars[i].classList.remove('checked');
            }

            // Fill selected stars
            for (let i = 0; i < rating; i++) {
                stars[i].innerHTML = '&#9733;';
                stars[i].classList.add('checked');
            }
        }

        function submitRating() {
            const comment = document.getElementById('comment').value;

            // Perform rating submission logic here
            // You can send the selectedRating and comment to the server for further processing

            // Example alert to show the selected rating and comment
            alert('Rating: ' + selectedRating + '\nComment: ' + comment);

            // Close the modal
            $('#ratingModal').modal('hide');
        }
    </script>

