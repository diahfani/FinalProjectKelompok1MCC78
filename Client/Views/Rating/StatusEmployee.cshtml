            <!-- Modal -->
            <div class="modal fade" id="ratingModal_@item.Rating?.Guid" tabindex="-1" role="dialog" aria-labelledby="ratingModalLabel_@item.Rating?.Guid" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ratingModalLabel_@item.Rating?.Guid">Rating</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Index" method="get">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" name="guid" value="@item.Rating?.Guid" />
                                <input type="hidden" name="ratingValue" value="@item.Rating?.RatingValue" />

                                <div class="rating-stars" id="ratingStars_@item.Rating?.Guid" value="@item.Rating?.RatingValue">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating?.RatingValue)
                                        {
                                            <span class="fa fa-star checked" onclick="updateRating('@item.Rating?.Guid', @i)"></span>
                                        }
                                        else
                                        {
                                            <span class="fa fa-star" onclick="updateRating('@item.Rating?.Guid', @i)"></span>
                                        }
                                    }
                                </div>



                                <textarea class="custom-textbox" name="comment">@item.Rating?.Comment</textarea>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        }

            }


    <script>
        $(document).ready(function () {
            $('.modal').on('shown.bs.modal', function () {
                var modalId = $(this).attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = $('#ratingValue_' + ratingId).val();
                $('#ratingStars_' + ratingId + ' span').each(function () {
                    if ($(this).data('rating-value') <= ratingValue) {
                        $(this).addClass('checked');
                    } else {
                        $(this).removeClass('checked');
                    }
                });
            });

            $('.modal form').submit(function (event) {
                event.preventDefault(); // Prevent form submission

                var modalId = $(this).closest('.modal').attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = 0;

                // Determine the selected rating value
                $('#ratingStars_' + ratingId + ' span').each(function () {
                    if ($(this).hasClass('checked')) {
                        ratingValue = $(this).data('rating-value');
                    }
                });

                // Get the comment value
                var comment = $('#comment_' + ratingId).val();

                // Set the values in the hidden input fields
                $('#ratingValue_' + ratingId).val(ratingValue);

                // Submit the form
                $(this).off('submit').submit();
            });
        });

        function updateRating(guid, rating) {
        var ratingStars = $('#ratingStars_' + guid + ' span');
        ratingStars.each(function (index) {
            if (index < rating) {
                $(this).addClass('checked');
            } else {
                $(this).removeClass('checked');
            }
        });

        // Mengatur nilai rating pada atribut data-rating-value
        $('#ratingStars_' + guid).data('rating-value', rating);
    }
    </script>


