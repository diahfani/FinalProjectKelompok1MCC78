@model Client.Models.Rating

@{
    ViewData["Title"] = "Deletes";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<style>
    .rating-stars {
            color: rgb(219, 219, 219);
        }
    .checked {
        color: gold;
    }
</style>

<h1>Deletes</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatingValue)
        </dt>
        <dd class="col-sm-10">
            <div class="rating-stars">
            @for (int i = 1; i <= 5; i++)
            {
                <span class="fa fa-star @(i <= Model.RatingValue ? "checked" : "")"></span>
            }
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
    </dl>

    <form asp-action="Remove" method="post">
        <input type="hidden" name="GUID" value="@Model.Guid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
}
