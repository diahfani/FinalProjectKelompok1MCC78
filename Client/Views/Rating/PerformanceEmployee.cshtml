                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                <span class="ml-4">Performance</span>
                            </a>
                        </li>

                    </ul>
                </nav>
              
              <div class="pt-5 pb-2"></div>
          </div>
      </div>      
      <div class="iq-top-navbar">
          <div class="iq-navbar-custom">
              <nav class="navbar navbar-expand-lg navbar-light p-0">
                  
                  <div class="navbar-breadcrumb">
                      <h5>Performance</h5>
                  </div>
                  
              </nav>
          </div>
      </div>        
      <div class="content-page">
     <div class="container-fluid">
        
         <canvas id="ratingChart"></canvas>

        <!-- Page end  -->
    </div>
      </div>
    </div>



    <script>
    document.addEventListener("DOMContentLoaded", function () {
        var ratingValues = [];
        var subjects = [];

        @foreach (var item in Model.Ratings) {
            <text>ratingValues.push(@item.RatingValue);</text>
        }

        @foreach (var item in Model.Tasks) {
            <text>subjects.push("@item.Subject");</text>
        }

        var ctx = document.getElementById("ratingChart").getContext("2d");
        new Chart(ctx, {
            type: "bar", // Mengubah jenis grafik menjadi bar chart
            data: {
                labels: subjects,
                datasets: [{
                    label: "Rating Values",
                    data: ratingValues,
                    backgroundColor: "rgb(75, 192, 192)", // Warna latar belakang batang
                    borderColor: "rgb(75, 192, 192)",
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        display: true,
                        title: {
                            display: true,
                            text: "Subject"
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            text: "Rating Value"
                        },
                        beginAtZero: true // Mulai sumbu Y dari 0
                    }
                }
            }
        });
    });
</script>



     <!-- Backend Bundle JavaScript -->
    <script src="~/assets/js/backend-bundle.min.js"></script>
    
    <!-- Chart Custom JavaScript -->
    <script async src="~/assets/js/chart-custom.js"></script>
    <script src="~/assets/js/app.js"></script>

     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>





