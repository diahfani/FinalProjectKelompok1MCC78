@model Client.Models.Rating

@{
    ViewData["Title"] = "Creates";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .rating-stars {
            color: rgb(219, 219, 219);
        }

        .rating-stars .fa-star {
            font-size: 20px;
        }

        .rating-stars .fa-star.checked {
            color: gold;
        }

        .custom-textbox {
            width: 100%;
            height: 100px;
            resize: vertical;
        }
    </style>
</head>
<body>
    <h1>Index</h1>

    <p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ratingModal">
            Create New
        </button>
    </p>
    <!-- Rating Modal -->
    <div class="modal fade" id="ratingModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Create New Rating</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Creates" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" >
                           <label asp-for="Guid" class="control-label"></label>
                            <input asp-for="Guid" class="form-control" />
                            <span asp-validation-for="Guid" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RatingValue" class="control-label"></label>
                            <div id="ratingStars" class="rating-stars">
                                <span class="fa fa-star" data-rating-value="1"></span>
                                <span class="fa fa-star" data-rating-value="2"></span>
                                <span class="fa fa-star" data-rating-value="3"></span>
                                <span class="fa fa-star" data-rating-value="4"></span>
                                <span class="fa fa-star" data-rating-value="5"></span>
                            </div>
                            <input id="ratingValue" name="RatingValue" type="hidden" />
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>

                        <textarea class="custom-textbox" name="comment" id="createComment"></textarea>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.modal').on('shown.bs.modal', function () {
                var modalId = $(this).attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = $('#ratingValue_' + ratingId).val();
                $('#ratingStars_' + ratingId + ' span').each(function () {
                    if ($(this).data('rating-value') <= ratingValue) {
                        $(this).addClass('checked');
                    } else {
                        $(this).removeClass('checked');
                    }
                });
            });

            $('#ratingStars span').click(function () {
                var ratingValue = $(this).data('rating-value');
                updateCreateRating(ratingValue);
                $('#ratingValue').val(ratingValue);
            });

            $('.modal form').submit(function (event) {
                event.preventDefault(); // Prevent form submission

                var modalId = $(this).closest('.modal').attr('id');
                var ratingId = modalId.replace('ratingModal_', '');
                var ratingValue = $('#ratingValue_' + ratingId).val();

                // Get the comment value
                var comment = $('#comment_' + ratingId).val();

                // Submit the form
                $(this).off('submit').submit();
            });
        });

        function updateCreateRating(rating) {
            var createRatingStars = $('#ratingStars span');
            createRatingStars.each(function () {
                if ($(this).data('rating-value') <= rating) {
                    $(this).addClass('checked');
                } else {
                    $(this).removeClass('checked');
                }
            });
        }
    </script>
</body>
</html>
