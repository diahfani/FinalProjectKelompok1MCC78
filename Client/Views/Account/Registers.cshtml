
@model Client.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Registers";
}



<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <title>Register</title>
      
      <link rel="stylesheet" href="~/assets/css/backend.css?v=1.0.0">
      
  </head>
  <body class=" ">
    <!-- loader END -->
    
      <div class="wrapper">
      <section class="login-content">
         <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
               <div class="col-lg-8">
                  <div class="card auth-card">
                     <div class="card-body p-0">
                        <div class="d-flex align-items-center auth-content">
                           <div class="col-lg-6 bg-primary content-left">
                              <div class="p-3">
                                 <h2 class="mb-2 text-white">Sign Up</h2>
                                 <form asp-action="Registers">
                                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                              <input asp-for="Fullname" class="floating-input form-control" type="text" placeholder=" "/>
                                              <span asp-validation-for="Fullname" class="text-danger"></span>
                                             <label asp-for="Fullname">Fullname</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="NIK" class="floating-input form-control" type="text" placeholder=" "/>
                                              <span asp-validation-for="NIK" class="text-danger"></span>
                                             <label asp-for="NIK">NIK</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">

                                              <input asp-for="Email" class="floating-input form-control" type="text" placeholder=" "/>
                                              <span asp-validation-for="Email" class="text-danger"></span>
                                             <label asp-for="Email">Email</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="Gender" class="floating-input form-control" type="text" placeholder=" " />
                                             <span asp-validation-for="Gender" class="text-danger"></span>
                                             <label asp-for="Gender">Gender</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="PhoneNumber" class="floating-input form-control" type="text" placeholder=" " />
                                             <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                             <label asp-for="PhoneNumber">PhoneNumber</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="HiringDate" class="floating-input form-control" type="date" placeholder=" " />
                                             <span asp-validation-for="HiringDate" class="text-danger"></span>
                                             <label asp-for="HiringDate">HiringDate</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="ManagerID" class="floating-input form-control" type="text" placeholder=" " />
                                             <span asp-validation-for="ManagerID" class="text-danger"></span>
                                             <label asp-for="ManagerID">ManagerID</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="Password" class="floating-input form-control" type="password" placeholder=" ">
                                             <span asp-validation-for="Password" class="text-danger"></span>
                                             <label asp-for="Password">Password</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input asp-for="ConfirmPassword" class="floating-input form-control" type="password" placeholder=" ">
                                             <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                             <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                          </div>
                                       </div>
                                    </div>
                                    <button type="submit" value="Create" class="btn btn-white"> Register </button>
                                    <p class="mt-3">
                                       Already have an Account? <a asp-controller="Account" asp-action="Logins" class="text-white text-underline"> Sign In</a>
                                    </p>
                                 </form>

                              </div>
                           </div>
                           <div class="col-lg-6 content-right">
                              <img src="~/assets/images/login/01.png" class="img-fluid image-right" alt="">
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      </div>
    
  </body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
